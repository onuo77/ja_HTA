package review0325;

import java.util.Scanner;

public class review05 {
	
	public static void main(String[] args) {
		//5. if - else 문/ 내포된 if문 / if ~ else if / while 문 (WhileDemo2.java)
		/*
		   while문을 통한 무한루프
		   결제, 충전, 종료 서비스 구현하기
		   코드 작성 후 주석으로 리뷰 해보기 추천! (어떤 식으로 작동되는지..)
		*/
		Scanner sc = new Scanner(System.in);
		
		int chargeMoney = 0;
		while(true) {
			
			System.out.println("================");
			System.out.println("1.결제 2.충전 3.종료");
			System.out.println("================");
			
			System.out.println("서비스를 선택하세요.");
			int selectNum = sc.nextInt();
					
			while(true) {
				int spendMoney = 0;
				if(selectNum == 1) {
					if(spendMoney > chargeMoney) {
						System.out.println("잔액 부족");
					}else {
						chargeMoney -= spendMoney;
						System.out.println("사용금액 : " + spendMoney);
						System.out.println("남은금액 : " + chargeMoney);
					}
				}
			}
			
		}
	}
}
