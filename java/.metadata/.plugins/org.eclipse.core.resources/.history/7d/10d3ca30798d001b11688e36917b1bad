package review0325;

import java.util.Scanner;

public class review03 {
	
	// 3. break / continue 문
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		//좋아하는 동물 입력
		System.out.println("원하는 동물을 선택하세요");
		System.out.println("1.토끼 2.강아지 3.고양이");
		int animalNum = sc.nextInt();
		
		for(int i=1; i<4; i++) {
			if(animalNum == 1) {
				System.out.println("토끼를 선택, 추가로 고르시겠습니까?");
				System.out.println("1.예 2.아니오");
				int select = sc.nextInt();
				if(select == 1) {
					continue;
					break;
				}else {
					System.out.println("토끼 선택");
					System.out.println("종료되었습니다.");
					break;
				}
			}else if (animalNum == 2) {
				System.out.println("강아지를 선택, 추가로 고르시겠습니까?");
				System.out.println("1.예 2.아니오");
				int select = sc.nextInt();
				if(select == 1) {
					continue;
				}else {
					System.out.println("강아지 선택");
					System.out.println("종료되었습니다.");
					break;
				}
			}else if(animalNum == 3) {
				System.out.println("고양이를 선택, 추가로 고르시겠습니까?");
				System.out.println("1.예 2.아니오");
				int select = sc.nextInt();
				if(select == 1) {
					continue;
				}else {
					System.out.println("고양이 선택");
					System.out.println("종료되었습니다.");
					break;
				}
			}
		}
		
	}
}
