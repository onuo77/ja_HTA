package review0325;

public class review07 {

	public static void main(String[] args) {
		//7. 배열 활용 (향상된 for문 사용 - ArrayDemo3.java) 

		// 이번에 수업에 참여한 모든 학생의 이름을 출력하시오.
		// 김유신/이순신/홍길동 학생의 성적을 전부 출력하시오.
		// 국어 점수의 평균을 출력하시오.
		// 수학 점수의 평균을 출력하시오.
		// 영어 점수의 평균을 출력하시오.
		// 각 학생별 학생이름, 국어, 영어, 수학점수, 총점, 평균점수를 출력하시오. 

		String[] names = {"김유신", "이순신", "홍길동"};
		int[] korScores = {100, 80, 30};
		int[] engScores = {80, 100, 50};
		int[] mathScores = {80, 100, 20};

		// 모든 학생이름 출력
		System.out.println("### 학생들 이름출력 ###");
		for(String studentName : names) {
			System.out.println(studentName + "\t");
		}	

		System.out.println("--------------------");

		//학생의 성적 출력
		System.out.println("### 김유신 성적 ###");
		System.out.println("국어 : " + korScores[0]);
		System.out.println("영어 : " + engScores[0]);
		System.out.println("수학 : " + mathScores[0]);

		System.out.println("");
		System.out.println("### 이순신 성적 ###");
		System.out.println("국어 : " + korScores[1]);
		System.out.println("영어 : " + engScores[1]);
		System.out.println("수학 : " + mathScores[1]);

		System.out.println("");
		System.out.println("### 홍길동 성적 ###");
		System.out.println("국어 : " + korScores[2]);
		System.out.println("영어 : " + engScores[2]);
		System.out.println("수학 : " + mathScores[2]);

		System.out.println("--------------------");

		//국어평균
		int korSum = 0;
		for(int sum : korScores) {
			korSum += sum;
		}
		int korAvg = korSum/korScores.length;
		System.out.println("국어평균 : " + korAvg);
		
		//수학평균
		int mathSum = 0;
		for(int sum : mathScores) {
			mathSum += sum;
		}
		int mathAvg = mathSum/mathScores.length;
		System.out.println("수학평균 : " + mathAvg);
		
		//영어평균
		int engSum = 0;
		for(int sum : engScores) {
			engSum += sum;
		}
		int engAvg = engSum/engScores.length;
		System.out.println("영어평균 : " + engAvg);
		
		System.out.println("--------------------");
		
		//학생이름, 국어, 영어, 수학점수, 총점, 평균점수 출력
		for(int i=0; i<names.length; i++) {
			int totalScore = korScores[i] + mathScores[i] + engScores[i];
			int totalAvg = totalScore/names.length;
			
			System.out.print("학생이름\t국어\t수학\t영어\t총점\t평균점수");
			System.out.println("");
			System.out.println(names[i] +"\t" + korScores[i]+"\t" + mathScores[i]+"\t" + engScores[i]+"\t" + totalScore+"\t" + totalAvg);
		}
		
		
		
	}

}
