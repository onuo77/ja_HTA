package review0325;

import java.util.Scanner;

public class review03 {
	
	// 3. break / continue 문
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		//좋아하는 동물 입력
		System.out.println("원하는 동물을 선택하세요");
		System.out.println("1.토끼 2.사슴 3.개 4.사자 5.고양이");
		int animalNum = sc.nextInt();
		
		for(int i=1; i<5; i++) {
			if(animalNum == 1) {
				System.out.println("추가로 고르시겠습니까?");
				continue;
			}
		}
		
	}
}
