package review0326;

public class review04 {
	
	public static void main(String[] args) {
		//4. 다차원배열
		/* 다차원배열(2행 3열 다차원 배열) 생성하기 */
		// 다차원 배열의 값 출력하기 (System.out.println)
		// for문을 사용해서 다차원 배열의 모든 값을 출력하기
		//String[][] hangul = new String[2][3];
		String[][] hangul = {{"가","나","다"},{"라","마","바"}};	
		
		System.out.println("### System.out 2x3 출력 ###");
		System.out.print(hangul[0][0] + " ");
		System.out.print(hangul[0][1] + " ");
		System.out.println(hangul[0][2]);
		
		System.out.print(hangul[1][0] + " ");
		System.out.print(hangul[1][1] + " ");
		System.out.println(hangul[1][2]);
		
		System.out.println("------------------------------------");
		
		System.out.println("### for 2x3 출력 ###");
		for(int i=0; i<hangul.length; i++) {
			for(int j=0; j<hangul[i].length; j++) {
				System.out.print(hangul[i][j] + " ");
			}
			System.out.println();
		}
		
		System.out.println("------------------------------------");
		
		/* 3행*X열 2차원 배열 생성하기 */
		// 위에서 정의한 배열의 0번째, 1번째, 2번째 행에 포함될 배열을 생성하기(각 배열의 크기가 서로 다름)
		// 위에서 정의한 names배열의 0번째, 1번째, 2번째에 각각의 배열을 대입시키기
		// 행과 열의 크기 확인하기
		// 일반 for문으로 생성한 배열의 모든 값 출력하기
		// 향상된 for문으로 생성한 배열의 모든 값 출력하기		
		
		//3*x행 배열 생성
		int[][] numbers = new int[3][];
		
		//크기가 다른 배열 생성
		int[] num1 = {1,2,3};
		int[] num2 = {4,5,6,7};
		int[] num3 = {8,9,10,11,12};
		
		//numbers 배열에 열 대입
		numbers[0] = num1;
		numbers[1] = num2;
		numbers[2] = num3;
		
		//행열 크기 확인
		System.out.println("행의 크기 : "+numbers.length);
		System.out.println("열의 크기 : "+num1.length);
		System.out.println("열의 크기 : "+num2.length);
		System.out.println("열의 크기 : "+num3.length);
		
		System.out.println("------------------------------------");
		
		//일반 for문 출력
		for(int i=0; i<numbers.length; i++) {
			for(int j=0; j<numbers[i].length; j++) {
				System.out.print(numbers[i][j] + " ");
			}
		}
		
		System.out.println("------------------------------------");
		//향상된 for문 출력
		for(int[] num : numbers) {
			for(int x : num) {
				System.out.println(x + " ");
			}
		}

	}	
}
