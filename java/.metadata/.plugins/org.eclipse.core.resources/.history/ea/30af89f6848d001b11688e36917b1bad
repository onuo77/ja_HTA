package review0325;

public class review06 {
	
	public static void main(String[] args) {
		// 6. 배열 (ArrayDemo1.java)
		// String, int, double 배열 선언 후 값을 넣고 출력해보기
		// for문 / 향상된 for문 각각 사용
		
		//String[] names = new String[3];
		//String[] names = new String[]{"홍길동", "김유신", "유재석"};
		String[] names = {"홍길동", "김유신", "유재석"};
		int[] scores = {10,30,40};
		double[] rates = {0.22, 0.3, 0.1};
		
		//for문
			System.out.print("이름출력 : ");
		for(int i=0; i<names.length; i++) {
			System.out.printf(names[i]+"\t");
		}
		
		System.out.print("\n점수출력 : ");
		for(int i=0; i<scores.length; i++) {
			System.out.printf(scores[i]+"\t");
		}
		
		System.out.print("\n비율출력 : ");
		for(int i=0; i<rates.length; i++) {
			System.out.printf(rates[i]+"\t");
		}
		
		System.out.println("=====================");
		
		//향상된 for문
		for(String n : names) {
			System.out.println(n);
		}
		
	}
}
